<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <!-- <link rel="icon" href="../../../../favicon.ico"> -->
  <link rel="stylesheet" href="../stylesheets/style.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">

  <title>
    <%= title %>
  </title>

</head>

<body>
  <!-- Navigation Bar  -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">WarDogs</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/login">Log In</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about">About</a>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Enter your location to find an adventure...">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>

    </div>
  </nav>

  <main role="main">

    <!-- Main card for singular event -->
    <div class="card">
      <img class="card-img-top" id="event-image" alt="Card image cap">
      <div class="card-body">
        <!-- TODO: Update via event ID -->
        <h5 class="card-title" id="event-title"></h5>
        <p class="card-text" id="event-description"></p>
      </div>
      <ul class="list-group list-group-flush">
        <!-- TODO: Update LOCATION, DATE, DIFFICULTY via event ID -->
        <li class="list-group-item" id="event-location">Location: </li>
        <li class="list-group-item" id="event-date">Date: </li>
        <li class="list-group-item" id="event-duration">Duration (in minutes): </li>
        <li class="list-group-item" id="event-difficulty">Difficulty: </li>
      </ul>
      <div class="card-body">
        <!-- BUTTON to JOIN event  -->
        <button id="joinButton" class="btn btn-outline-success my-2 my-sm-0" type="submit"><%= registered %></button>
      </div>
    </div>

    <!-- /container -->

  </main>

  <footer class="container-fluid">
    <p>&copy; Company 2017-2018</p>
  </footer>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
  <script src="../source/event.js" charset="utf-8"></script>
  <script src="../source/renderEventDetail.js" charset="utf-8"></script>
</body>

</html>